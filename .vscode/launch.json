{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/dist/src/index.js",
      "envFile": "${workspaceFolder}/.env",
      "sourceMaps": true,
      "outFiles": [ "${workspaceFolder}/dist/src/**/*.js" ]
    },
    {
      "name": "Run test",
      "request": "launch",
      "runtimeArgs": [
        "test"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}
