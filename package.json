{
  "name": "ts-template",
  "version": "0.0.1",
  "description": "A TypeScript template",
  "main": "src/index.ts",
  "keywords": ["ts", "typescript", "template"],
  "author": "Fabr√≠cio Barros Cabral",
  "license": "MIT",
  "type": "module",
  "scripts": {
      "test:all": "node --env-file=.env --import tsx --experimental-test-coverage --test test/**/**.test.ts",
      "test:watch": "node --env-file=.env --import tsx --experimental-test-coverage --watch --test",
      "test": "node --env-file=.env --import tsx --test",
      "build": "npx tsc --project tsconfig.prod.json",
      "build:dev": "npx --env-file=.env tsc --project tsconfig.json",
      "start": "node dist/server.js",
      "dev": "node --env-file=.env --import tsx src/server.ts",
      "lint": "npx eslint --fix ./src ./test",
      "check": "npm audit & npm outdated & npm run lint & npm run build -- --noEmit",
      "migrate": "node  dist/cli/kysely.js",
      "migrate:dev": "node --env-file=.env --import tsx src/cli/kysely.ts "
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
